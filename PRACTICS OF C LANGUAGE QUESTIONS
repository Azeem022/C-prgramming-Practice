QUESTION 1:
// FIND ASCII VALUE OF ANY VARIABLE
#include<stdio.h>
int main()
{
	char variable;
	printf("enter the variable:");
	scanf("%c",&variable);
	printf("%d",variable);
	return 0;
}
QUESTION 2:
//QUESTION USING SWITCH CASE:
#include<stdio.h>
int main()
{
	int weeks;
	printf("entre weeks numbers from (1-7):");
	scanf("%d",&weeks);
	switch(weeks)
	{
		case 1:
		printf("monday");
		break;
		case 2:
		printf("tuesday");
		break;
		case 3:
		printf("wednesday");
		break;
		case 4:
		printf("thrusday");
		break;
		case 5:
		printf("friday");
		break;
		case 6:
		printf("saturday");
		break;
		case 7:
		printf("sunday");
		break;
		default:
		printf("invalid number plzz try again with valid number");
	}
	return 0;
}
